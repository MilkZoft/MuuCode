@import '../../../styles/_dependencies'

.logo
    align-self center
    width 230px

    &.isotype
        width auto

    &.center
        margin 0 auto

    @media Mobile
        padding 20px 0px 20px 0px
        width 197px

    a
        color($colors.common.gray.six)
        display block
        z-index 200

        img
            display inline-block
            margin 0
            margin-right 5px
            vertical-align middle
            width 65px

        .brand
            font($font.family.openSans, $font.size.xLarge, $font.weight.bold)
            vertical-align middle

            .code
                color($colors.main.first)
