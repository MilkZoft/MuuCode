    desktop: {
        large: 1024px,
        xLarge: 1280px,
        xxLarge: 1600px,
        xxxLarge: 1920px
    },
    tablet: {
        portrait: 1023px,
        landscape: 1024px
    },
    mobile: {
        portrait: 640px,
        landscape: 736px,
    },
    devices: {
        iPad: {
            portrait: 768px,
            landscape: 1024px
        },
        iPhone: {
            five: {
                portrait: 320px,
                landscape: 568px,
                aspectRatio: '40/71'
            },
            seven: {
                portrait: 375px,
                landscape: 667px,
                aspectRatio: '375/667',
                pixelRatio: 2
            },
            sevenPlus: {
                portrait: 414px,
                landscape: 736px,
