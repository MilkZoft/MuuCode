@import './_mixins'

.btn
    color($colors.common.white)
    fontSize(14px)
    normal()
    appearance none
    border-radius 4px
    cursor pointer
    display inline-block
    line-height 1.5
    margin 0
    max-width 100%
    overflow hidden
    padding .5rem 1.25rem
    position relative
    text-align center
    text-decoration none
    text-overflow ellipsis
    transition all .15s ease-in-out
    user-select none
    vertical-align middle
    white-space nowrap

    &:active
        position relative
        top 1px

    &.default
        btn($colors.buttons.default.start, $colors.buttons.default.end, $colors.buttons.default.border, $colors.buttons.default.shadow)
        color($colors.common.gray.three)

    &.success
        btn($colors.buttons.success.start, $colors.buttons.success.end, $colors.buttons.success.border, $colors.buttons.success.shadow)

    &.primary
        btn($colors.buttons.primary.start, $colors.buttons.primary.end, $colors.buttons.primary.border, $colors.buttons.primary.shadow)

    &.danger
        btn($colors.buttons.danger.start, $colors.buttons.danger.end, $colors.buttons.danger.border, $colors.buttons.danger.shadow)

    &.warning
        btn($colors.buttons.warning.start, $colors.buttons.warning.end, $colors.buttons.warning.border, $colors.buttons.warning.shadow)

    &.dark
        btn($colors.buttons.dark.start, $colors.buttons.dark.end, $colors.buttons.dark.border, $colors.buttons.dark.shadow)

    &.black
        color($colors.common.gray.three)
